<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL a utilizar:"
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <RadioGroup
        android:id="@+id/radioGroupUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioSports"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="https://www.vidalibarraquer.net/android/sports/" />

        <RadioButton
            android:id="@+id/radioLeagues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="https://www.vidalibarraquer.net/android/leagues/" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imgNBA"
        android:src="@drawable/nba"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/imgNFL"
        android:src="@drawable/nfl"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/imgMLB"
        android:src="@drawable/mlb"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/imgNHL"
        android:src="@drawable/nhl"
        android:layout_width="200dp"
        android:layout_height="100dp" />

    <ImageView
        android:id="@+id/imgMLS"
        android:src="@drawable/mls"
        android:layout_width="200dp"
        android:layout_height="100dp" />
</LinearLayout>
